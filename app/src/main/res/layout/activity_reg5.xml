<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/micrabg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Reg5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnback"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/back"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="SUBMISSION"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="  Account"
        android:textSize="20dp"

        android:layout_marginBottom="5dp"

        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >
        <TableRow
            >

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="USERNAME"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvusername"
                android:text="USERNAME"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView

                android:gravity="center"
                android:padding="3dip"
                android:text="PASSWORD"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvpassword"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PASSWORD"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="NUMBER"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="NUMBER"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="EMAIL"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="EMAIL"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>
    </TableLayout>



    <TextView
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="  Profile"
        android:textSize="20dp"
        />


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >
        <TableRow
            >

            <TextView
                android:padding="3dip"
                android:text="FIRST NAME"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvfirstname"
                android:textColor="@color/black"
                android:text="FIRST NAME"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="MIDDLE NAME"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvmidname"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MIDDLE NAME"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="LAST NAME"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView

                android:textColor="@color/black"
                android:id="@+id/tvlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LAST NAME"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="DATE OF BIRTH"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvdateofbirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DATE OF BIRTH"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView

                android:padding="3dip"
                android:text="GENDER"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvgender"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="GENDER"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TableRow
            android:gravity="center"
            >
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:text="COMPLETE ADDRESS"
                android:padding="3dip" />


        </TableRow>

        <TableRow
            android:gravity="center"
            >
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:id="@+id/tvaddressline"
                android:text="ADDRESS"
                android:padding="3dip" />

        </TableRow>
    </TableLayout>






    <TextView
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="  Identification"
        android:textSize="20dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ividphoto"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvidname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivselfie"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/tvselfiename"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>






    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:backgroundTint="@color/purple_500"

        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />




</LinearLayout>