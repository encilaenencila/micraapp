<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".userfinish">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:stretchColumns="1">

                <TableRow>

                    <ToggleButton

                        android:id="@+id/tb_show_report"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:drawableTint="@color/red"
                        android:gravity="center"
                        android:textOff=" "
                        android:textOn=" " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="MY REPORT"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/shadow" />

            </TableLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/carding"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:visibility="gone"

                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="0,1">

                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvstatus"
                                android:gravity="right"
                                android:padding="3dip"

                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/red" />

                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Category"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvcategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Cagory"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                        <TableRow>

                            <TextView

                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Category Description"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvcategorydescription"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Category Description"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                    </TableLayout>

                    <ImageView
                        android:id="@+id/imgviewinfra"
                        android:layout_width="171dp"
                        android:layout_height="145dp"
                        android:layout_gravity="center" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="0,1">


                        <TableRow>

                            <TextView
                                android:gravity="left"

                                android:padding="3dip"
                                android:text="Location"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvlocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Location"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>


                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Landmark"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@id/tvlandmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Landmark"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/infradescriptiondata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="12sp" />


                    </TableLayout>


                </LinearLayout>

                <!--   android:background="@drawable/ey1"-->
            </androidx.cardview.widget.CardView>


            <TableLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:stretchColumns="1">

                <TableRow>

                    <ToggleButton

                        android:id="@+id/tb_show_report2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:drawableTint="@color/red"
                        android:gravity="center"
                        android:textOff=" "
                        android:textOn=" " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="RESPONSE"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/shadow" />

            </TableLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/carding2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="0,1">


                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Responded By"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvrespondername"
                                android:layout_width="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="No Response yet"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>


                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Respond Date"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvresponddate"
                                android:layout_width="wrap_content"


                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:padding="3dip"
                                android:text="No Response yet"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Respond Time"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvrespondtimes"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:padding="3dip"
                                android:text="No Response yet"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>


                    </TableLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Respond Message"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvrespondmessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No Response yet"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TableLayout


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:stretchColumns="1">

                <TableRow>

                    <ToggleButton

                        android:id="@+id/tb_show_report3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:drawableTint="@color/red"
                        android:gravity="center"
                        android:textOff=" "
                        android:textOn=" " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="PROOF OF COMPLETION"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/shadow" />

            </TableLayout>


            <androidx.cardview.widget.CardView

                android:id="@+id/carding3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="0,1">


                        <TableRow>


                        </TableRow>


                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Resolve Date"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvresolvedate"
                                android:layout_width="wrap_content"


                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:padding="3dip"
                                android:text="Not yet resolved"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="Resolve Time"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvresolvetime"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:padding="3dip"
                                android:text="Not yet resolved"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </TableRow>


                    </TableLayout>

                    <ImageView
                        android:id="@+id/imgviewinfra2"
                        android:layout_width="171dp"

                        android:layout_height="145dp"
                        android:layout_gravity="center"

                        />

                    <TextView

                        android:id="@+id/tvfeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlfeedback"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:hint="Feedback"
                        android:visibility="gone"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"

                        app:boxCornerRadiusTopStart="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tefeedback"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:textSize="12sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btnfeedback"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="SEND FEEDBACK"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>