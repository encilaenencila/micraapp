<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/micrabg"

    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Resubmit">


    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:backgroundTint="#00FFFFFF"
            android:orientation="horizontal">



            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Your Profile"
                android:textSize="20dp" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="190dp"


                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciselfie"
                    android:layout_width="250dp"
                    android:layout_height="220dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="95dp"

                    android:layout_marginBottom="2dp"

                    app:civ_border_color="@color/purple_500"
                    app:civ_border_width="2dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnretakeselfie"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/ciselfie"
                    android:layout_alignBottom="@+id/ciselfie"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="@color/purple_500"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    app:fabCustomSize="40dp"
                    app:tint="@color/white" />


            </RelativeLayout>
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Valid ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="190dp"


                >


                <ImageView

                    android:id="@+id/ividphoto"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="69dp"
                    android:layout_marginBottom="29dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:siBorderWidth="6dp"
                    app:siRadius="6dp"
                    app:siSquare="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnretakeidphoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/ividphoto"
                    android:layout_alignBottom="@+id/ividphoto"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="-23dp"
                    android:backgroundTint="@color/purple_500"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    app:fabCustomSize="40dp"
                    app:tint="@color/white" />


            </RelativeLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlfirstname"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopStart="25dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="First Name"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tefirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="16" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlmiddlename"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopStart="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Middle Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/temiddlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="16"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tllastname"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopStart="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Last Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="16"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tldateofbirth"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopStart="25dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Date of Birth">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:id="@+id/tedateofbirth"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvgender"
                android:text="Sex:"
                android:textSize="15dp"


                />
            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"


                >

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:buttonTint="@color/purple_500"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:buttonTint="@color/purple_500"
                    />
                <!--    <RadioButton
                        android:id="@+id/radioRNS"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_500"
                        android:text="Rather not say" />
        -->
            </RadioGroup>



            <com.google.android.material.textfield.TextInputLayout

                app:startIconDrawable="@drawable/ic_baseline_location_on_24"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:hint="Complete Address"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:focusable="false"
                    android:clickable="false"
                    android:id="@+id/teaddressline"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:textSize="14dp"
                    android:inputType="textMultiLine"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="USERNAME"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:clickable="true"
                    android:onClick="resubmitusername"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    android:id="@+id/tvusername"
                    android:textColor="@color/black"
                    android:text="USERNAME"
                    android:gravity="right"
                    android:padding="3dip" />


            </LinearLayout>


            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="NUMBER"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:clickable="true"
                    android:onClick="resubmitnumber"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    android:id="@+id/tvnumber"
                    android:textColor="@color/black"
                    android:text="USERNAME"
                    android:gravity="right"
                    android:padding="3dip" />


            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="EMAIL"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:clickable="true"
                    android:onClick="resubmitemail"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    android:id="@+id/tvemail"
                    android:textColor="@color/black"
                    android:text="EMAIL"
                    android:gravity="right"
                    android:padding="3dip" />


            </LinearLayout>


            <!--
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dip"
                            android:text="CHANGE PASSWORD"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                        <TextView
                            android:clickable="true"

                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"

                            android:id="@+id/tvpassword"
                            android:textColor="@color/black"

                            android:gravity="right"
                            android:padding="3dip" />


                    </LinearLayout>-->

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:backgroundTint="@color/purple_500"
                android:shadowColor="@color/black"
                android:text="Update"
                android:textStyle="bold" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>